<h1><%= @cocktail[:name] %></h1>
<% @cocktail.doses.each do |d|%>
<li><%= d.description %> <%= d.ingredient.name %>
  <%= link_to cocktail_path(d),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
   <i class="fas fa-trash"></i>
    <% end %></li>
</li>
<% end %>

<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>
<%= link_to "Edit dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
